# ============================================
# Gate API Environment Variables
# Copy this file to .env and fill in your values
# ============================================

# ============================================
# APP CONFIGURATION
# ============================================
APP_NAME=Gate
APP_ENV=development
APP_DEBUG=true
APP_PORT=8080
APP_URL=http://localhost:8080
APP_SECRET=your-super-secret-key-change-this-in-production

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-this
JWT_ACCESS_EXPIRY=3600
JWT_REFRESH_EXPIRY=604800

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=gate
DB_PASSWORD=gate_secret_password
DB_NAME=gate_db
DB_SSL_MODE=disable
DB_MAX_CONNECTIONS=100
DB_MAX_IDLE_CONNECTIONS=10
DB_CONN_MAX_LIFETIME=3600

# ============================================
# REDIS
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=gate_redis_password
REDIS_DB=0
REDIS_POOL_SIZE=10

# ============================================
# FILE STORAGE (S3)
# ============================================
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=ap-southeast-1
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_BUCKET=gate
S3_BASE_URL=https://gate.s3.amazonaws.com

# ============================================
# PRODUCT PROVIDERS
# ============================================

# Digiflazz
DIGIFLAZZ_USERNAME=your_username
DIGIFLAZZ_API_KEY=your_api_key
DIGIFLAZZ_WEBHOOK_SECRET=your_webhook_secret

# VIP Reseller
VIPRESELLER_API_ID=your_api_id
VIPRESELLER_API_KEY=your_api_key

# BangJeff
BANGJEFF_MEMBER_ID=your_member_id
BANGJEFF_SECRET_KEY=your_secret_key
BANGJEFF_WEBHOOK_TOKEN=your_webhook_token

# ============================================
# PAYMENT GATEWAYS
# ============================================

# LinkQu (QRIS)
LINKQU_CLIENT_ID=your_client_id
LINKQU_CLIENT_SECRET=your_client_secret
LINKQU_USERNAME=your_username
LINKQU_PIN=your_pin

# BCA API (Virtual Account)
BCA_CLIENT_ID=your_client_id
BCA_CLIENT_SECRET=your_client_secret
BCA_API_KEY=your_api_key
BCA_API_SECRET=your_api_secret
BCA_CORPORATE_ID=your_corporate_id

# BRI API (Virtual Account)
BRI_CLIENT_ID=your_client_id
BRI_CLIENT_SECRET=your_client_secret
BRI_INSTITUTION_CODE=your_institution_code

# Xendit (Permata VA, Mandiri VA, Cards)
XENDIT_SECRET_KEY=your_secret_key
XENDIT_CALLBACK_TOKEN=your_callback_token

# Midtrans (GoPay, ShopeePay)
MIDTRANS_SERVER_KEY=your_server_key
MIDTRANS_CLIENT_KEY=your_client_key
MIDTRANS_IS_PRODUCTION=false

# DANA SNAP (QRIS + DANA)
DANA_X_PARTNER_ID=your_partner_id
DANA_MERCHANT_ID=your_merchant_id
DANA_CHANNEL_ID=your_channel_id
DANA_ORIGIN=https://your-frontend-domain.com
DANA_ENV=SANDBOX
DANA_PRIVATE_KEY_PATH=/path/to/private_key.pem
DANA_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----...-----END PRIVATE KEY-----
DANA_CALLBACK_URL=https://api.gate.co.id/webhooks/dana
DANA_RETURN_URL=https://app.gate.co.id/payment-status
DANA_DEFAULT_MCC=6012
DANA_DEBUG=false

# ============================================
# EMAIL (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_NAME=Gate
SMTP_FROM_EMAIL=noreply@gate.co.id

# ============================================
# GOOGLE OAUTH
# ============================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ============================================
# CORS
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://gate.co.id

# ============================================
# DOCKER COMPOSE SPECIFIC
# ============================================
DB_PORT=5432
REDIS_PORT=6379
API_PORT=8080
REDIS_COMMANDER_PORT=8081
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@gate.co.id
PGADMIN_PASSWORD=admin123

